---
import { Image } from "astro:assets";
import logo from "../../public/images/logo.png";
---

<nav class="sticky top-0 right-0 left-0 z-50 backdrop-blur-3xl backdrop nav">
  <div class="container mx-auto flex justify-between items-center py-2 px-5">
    <div>
      <Image src={logo} alt="logo image" class="size-11 md:size-12" />
    </div>
    <div class="flex gap-2">
      <a
        href="#"
        class="flex justify-center items-center py-0.5 px-1.5 md:py-2 md:px-2.5 text-xl md:text-xl md:font-semibold rounded-xl bg-amber-200"
        >Showcase
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6 md:size-8 stroke-2 pl-1"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"></path>
        </svg>
      </a>
      <a
        href="#"
        class="flex justify-center items-center py-0.5 px-1.5 md:py-2 md:px-2.5 text-xl md:text-2xl md:font-semibold rounded-xl bg-teal-300 text-black"
        >Get now
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6 md:size-8 stroke-2 pl-1"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m9 12.75 3 3m0 0 3-3m-3 3v-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
          ></path>
        </svg>
      </a>
    </div>
  </div>
</nav>

<style>
  .backdrop {
    background-color: rgba(0, 0, 0, 0.253);
  }
  .nav {
    opacity: 0;
    visibility: hidden;
  }
</style>
