---
import { Image } from "astro:assets";
import showimg from "../../public/images/show.png";
---

<div class="bg-black">
  <div
    class="container mx-auto flex flex-col md:flex-row justify-center items-strech pt-6 gap-7 px-6 skewer border-b-2 bc"
  >
    <div class="md:w-1/2 self-end">
      <Image
        src={showimg}
        alt="showcase image banner"
        transition:name="showcase-img"
      />
    </div>
    <div class="flex flex-col h-full items-start md:w-1/2">
      <h1
        class="text-blue-500 font-[MoriSB] text-3xl pb-4"
        transition:name="showcase-txt"
      >
        Showcase
      </h1>
      <h1 class="text-amber-100 font-[MoriR] text-2xl pb-4">
        Get inspiration from showcased items.
      </h1>
      <a
        class="text-amber-100 hover:text-black hover:bg-amber-100 transition-all duration-300 bg-black text-2xl font-[MoriR] border-amber-100 border-2 rounded-lg p-3 text-center mb-4 self-stretch"
        href="/showcase">Explore</a
      >
    </div>
  </div>
</div>

<style>
  .bc {
    border-color: rgba(255, 255, 255, 0.463);
  }
</style>
