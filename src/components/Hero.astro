---
import { Image } from "astro:assets";
import logo from "../../public/images/logo.png";
---

<section class="bg-black flex justify-center items-center relative">
  <div
    class="container mx-auto flex flex-col justify-center items-center py-4 px-5 skewer z-20"
  >
    <div class="flex flex-col justify-center items-center gap-2">
      <Image src={logo} alt={"jj"} class="size-16 md:size-24" />
      <h1 class="text-amber-50 text-2xl font-bold font-[MoriSB] maintxt">
        Daydream
      </h1>
    </div>
    <h1
      class="text-amber-50 text-2xl md:text-4xl font-[MoriR] text-center mt-4 animtext"
    >
      <span class="w">Daydream</span> is an extensively customisable <span
        class="w2">aesthetic</span
      > screensaver for <span class="w3">Mac</span> & <span class="w4">
        PC</span
      >.
    </h1>
    <div
      class="flex justify-center items-center text-xl text-amber-50 gap-3 my-2 mt-4"
    >
      <a
        href="/showcase"
        class="flex justify-center items-center py-0.5 px-1.5 md:py-2 md:px-2.5 text-xl md:text-xl md:font-semibold rounded-xl bg-blue-500"
        >Showcase
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6 md:size-8 stroke-2 icons pl-1"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m4.5 19.5 15-15m0 0H8.25m11.25 0v11.25"></path>
        </svg>
      </a>
      <a
        href="#"
        class="flex justify-center items-center py-0.5 px-1.5 md:py-2 md:px-2.5 text-xl md:text-xl md:font-semibold rounded-xl bg-green-300 text-black"
        >Buy now
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="size-6 md:size-8 stroke-2 iconb pl-1"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="m9 12.75 3 3m0 0 3-3m-3 3v-7.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z"
          ></path>
        </svg>
      </a>
    </div>
  </div>
</section>

<script>
  import gsap from "gsap";
  const { SplitText } = await import("gsap/SplitText");
  const { Draggable } = await import("gsap/Draggable");
  const { InertiaPlugin } = await import("gsap/InertiaPlugin");
  gsap.registerPlugin(SplitText, Draggable, InertiaPlugin);
  let mntxt = SplitText.create(".maintxt");

  let animtxt = SplitText.create(".animtext", {
    type: "words,chars",
    wordsClass: "word++",
  });

  gsap.from(mntxt.words, {
    duration: 0.5,
    y: 100,
    opacity: 0,
    onComplete() {
      gsap.to(".maintxt", {
        delay: 1,
        scale: 1.6,
        marginTop: 12,
        ease: "expo.out",
      });
    },
  });
  gsap.from(animtxt.words, {
    duration: 1,
    y: 100,
    opacity: 0,
    stagger: {
      each: 0.05,
      from: "random",
    },
  });

  function btn() {
    gsap.from(".iconb", {
      yPercent: -100,
      autoAlpha: 0,
      duration: 0.8,
      ease: "power4.out",
    });
    gsap.from(".icons", {
      xPercent: -100,
      yPercent: 100,
      autoAlpha: 0,
      duration: 0.8,
      ease: "power4.out",
    });
  }
  btn();
</script>

<style>
  .animtext {
    opacity: 1;
  }
  .prop1 {
    opacity: 0;
  }
</style>
